<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Travel Lovers</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Link Bulma CSS -->
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css'
    />
  </head>

  <body>
    <header class='is-flex is-flex-direction-row'>
      <nav class='is-justify-content-space-evenly'>
        <h1>
          Travel Lovers
        </h1>
        <span class="is-align-items-flex-end">
          <button class='btn-nav'><a href='/'>Homepage</a></button>
          {{#if loggedIn}}
            <button class='btn-nav'><a
                href='/bucket-list'
              >Dashboard</a></button>
            <button id='logout' class='btn-logout'>Logout</button>
            <div id='error-message'></div>
          {{else}}
            <button class='btn-nav'><a href='/login'>Login</a></button>
            <div id='error-message'></div>
          {{/if}}
        </span>
      </nav>
    </header>
    <main class='wrapper is-flex is-flex-direction-column'>
      {{{body}}}
    </main>
    <footer class='footer'>
      <div class='content has-text-centered'>
        Thanks for visiting!
      </div>
    </footer>

    {{#if loggedIn}}
      <script src='/javascript/logout.js'></script>
    {{/if}}
  </body>

</html>