<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Travel Lovers</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Link Bulma CSS -->
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css'
    />
  </head>

  <body>
    <header class='is-flex is-flex-direction-row'>
      <nav class='is-justify-content-space-evenly'>
        <a class="navbar-item" href="assets/images/travel-lovers-logo.png"></a>
          <img
            alt='Travel Lovers logo'
            src='assets/images/travel-lovers-logo.png'
            width='200'
            height='30'
          />
        </a>
        <span class='is-align-items-center'>
          <a href='/'><button class='btn-nav'>Homepage</button></a>
          {{#if loggedIn}}
            <a
                href='/bucket-list'
              ><button class='btn-nav'>Dashboard</button></a>
            <button id='logout' class='btn-logout'>Logout</button>
            <div id='error-message'></div>
          {{else}}
            <a href='/login'><button class='btn-nav'>Login</button></a>
            <div id='error-message'></div>
          {{/if}}
        </span>
      </nav>
    </header>
    <main class='wrapper is-flex is-flex-direction-column'>
      {{{body}}}
    </main>
    <footer class='footer'>
      <div class='content has-text-centered'>
        Thanks for visiting!
      </div>
    </footer>

    {{#if loggedIn}}
      <script src='/javascript/logout.js'></script>
    {{/if}}
  </body>

</html>