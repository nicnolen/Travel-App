<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <link rel='stylesheet' href='/stylesheets/dashboard.css' />
        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    </head>
    <body>
    <section class="container">
        <div class="level-item">
        <div class="columns is-multiline is-centered cards-container" id="sectioncontainer">
    
    {{!-- Card 1 --}}
    <div class="column is-wide">
        <article class="message is-black">
            <div class="message-header">
                <p>Bucketlist</p><i
          class='icon-bitbucket pr-2'
        ></i>
            </div>
            <div class="message-body">
                <i class="icon-building"></i> <input name="citytxt" placeholder="City" type="text" id="candidate"/>
                    <br>
                <i class="icon-calendar"></i> <input placeholder="Date" type="text" id="datepicker">
                    
                <div id="btnSection">
                    <button id="button-1" onclick="addItem()" class="btn-add"><i class="icon-plus-sign-alt pr-1"></i>Add</button>
                    <button id="button-2" onclick="removeItem()" class="btn-delete"><i class="icon-remove pr-1"></i>Remove</button>
                </div>
                <div>
                    <ul id="dynamic-list"></ul>
                </div>
            </div>
        </article>
    </div>
    
    
    {{!-- Card 2 --}}
    <div class="column is-wide">
        <article class="message is-primary">
            <div class="message-header">
                <p>Visiting</p><i class="icon-ticket"></i>
            </div>
            <div class="message-body">
                <i class="icon-building"></i> <input placeholder="City" type="text" id="candidate1"/>
                <br>
                <i class="icon-calendar"></i> <input placeholder="Date" type="text" id="datepicker1">
                <div id="btnSection">
                  <button onclick="addItem1()" class="btn-add"><i class="icon-plus-sign-alt pr-1"></i>Add</button>
                  <button onclick="removeItem1()" class="btn-delete"><i class="icon-remove pr-1"></i>Remove</button>
                </div>
            
                <ul id="dynamic-list1"></ul>
            </div>
        </article>
            </div>
        
    {{!-- Card 3 --}}
    <div class="column is-wide">
        <article class="message is-link">
            <div class="message-header">
                <p>Visited</p><i class="icon-plane"></i>
            </div>
            <div class="message-body">
                <i class="icon-building"></i> <input placeholder="City" type="text" id="candidate2"/>
                <br>
                <i class="icon-calendar"></i> <input placeholder="Date" type="text" id="datepicker2">
                <div id="btnSection"> 
                    <button onclick="addItem2()" class="btn-add"><i class="icon-plus-sign-alt pr-1"></i>Add</button>
                    <button onclick="removeItem2()" class="btn-delete"><i class="icon-remove pr-1"></i>Remove</button>
                </div>
            <div>
                <ul id="dynamic-list2"></ul>
            </div>
        </article>
    </div>
</section>


<script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
<script src='./javascript/dashboard.js'></script>
<script src='./javascript/datepicker.js'></script>

</body>
</html>
