<head>
  <link rel='stylesheet' href='/stylesheets/login.css' />
</head>

<div
  class='form-container wrapper is-flex is-justify-content-center is-align-items-center'
>
  <!--LOGIN FORM -->
  <form class='login-form pt-3 pl-6 pb-3 pr-6'>
    <div>
      <label
        for='email-login'
        class='is-size-6-mobile is-size-5-desktop'
      >Email:</label>
      <br />
      <input
        class='input is-info'
        type='text'
        id='email-login'
        placeholder='janedoe@email.com'
        autofocus='true'
      />
    </div>
    <div>
      <label
        for='password-login'
        class='is-size-6-mobile is-size-5-desktop'
      >Password:</label>
      <br />
      <input
        class='input is-info'
        type='password'
        id='password-login'
        placeholder='YourPassword'
      />
      <br />
    </div>
    <br />
    <div>
      <button
        class='button btn-login is-size-6-mobile is-size-6-desktop'
        type='submit'
      ><i class='icon-unlock icon-large pr-2'></i>Login</button>
    </div>
    <br />
    <h6><b>Need to create account?</b>
      <button id='create-account' class='btn-nav'><i
          class='icon-user pr-2'
        ></i>Click Here!</button></h6>
  </form>

  <!--SIGNUP FORM -->
  <form class='signup-form pl-6 pt-3 pb-3 pr-6' style='display:none'>
    <i
      class='icon-remove-sign icon-large is-flex is-justify-content-flex-end icon-remove-styles'
    ></i>
    <div>
      <label
        for='username-signup'
        class='is-size-6-mobile is-size-5-desktop'
      >Username:</label>
      <br />
      <input
        class='input is-info'
        type='text'
        id='username-signup'
        placeholder='janedoe'
      />
      <br />
    </div>
    <div>
      <label
        for='email-signup'
        class='is-size-6-mobile is-size-5-desktop'
      >Email:</label>
      <br />
      <input
        class='input is-info'
        type='text'
        id='email-signup'
        placeholder='janedoe@gmail.com'
      />
      <br />
    </div>
    <div>
      <label
        for='password-signup'
        class='is-size-6-mobile is-size-5-desktop'
      >Password:</label>
      <br />
      <input
        class='input is-info'
        type='password'
        id='password-signup'
        placeholder='YourPassword'
      />
      <br />
    </div>
    <div>
      <br />
      <button
        class='button btn-login is-size-6-mobile is-size-6-desktop'
        type='submit'
      ><i class='icon-pencil icon-large pr-2'></i>Signup</button>
    </div>
  </form>
  <br />
</div>

<!-- Add public/javascript pages -->
<script src='javascript/login.js'></script>